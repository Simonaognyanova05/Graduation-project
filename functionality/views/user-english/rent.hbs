<section class="container" style="margin-top: 150px;" id="popular">
    <form action="/user/filterRent" method="POST" id="login">
        <div class="mb-3">
            <p><strong>Select desired property type</strong></p>
            <input type="radio" id="type" value="Apartment" name="type">
            <label for="type">Apartment</label>

            <input type="radio" id="type" value="House" name="type">
            <label for="type">House</label>

            <input type="radio" id="type" value="Garage" name="type">
            <label for="type">Garage</label>

            <input type="radio" id="type" value="Office" name="type">
            <label for="type">Office</label>

            <input type="radio" id="type" value="Other" name="type">
            <label for="type">Other</label>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label"><strong>Location</strong></label>
            <input type="text" class="form-control" id="location" placeholder="Enter property location" name="location">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary"
                style="background-color: #000; border-color: beige">Filter</button>
        </div>
    </form>

</section>

<section class="container" style="margin-top: 10px;" id="popular">

    <p class="pt-5">Current</p>
    <div class="d-flex">
        <h2>Rents</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-2">
        {{#each rents}}
        <div class="col">
            <div class="card border-0 rounded-0">
                <img src="{{this.img1}}" alt="image1" class="card-img-top rounded-0" style="height: 300px;">
                <div class="card-body">
                    <p class="card-text text-muted">Property type: {{this.type}}</p>

                    <div class="d-flex justify-content-center mt-3">
                        <p class="mx-4 text-muted card-text"><i class="fa-solid fa-money-bill"></i>Location:
                            {{this.location}}</p>
                        <p class="mx-4 text-muted card-text"><i class="fa-solid fa-money-bill"></i> View:
                            {{this.priceForHour}}$.</p>
                    </div>

                    <div class="d-flex my-2">
                        <a href="/rent/gallery/{{this._id}}"
                            class="btn btn-lg text-white bg-dark px-4 rounded-0">Gallery</a>
                        <h5 class="my-auto ms-auto">Price: {{this.price}}</h5>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="alert alert-light" role="alert">
            There are no properties created for sale
        </div>
        {{/each}}
    </div>
</section>

