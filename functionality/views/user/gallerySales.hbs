</section>

<section class="container" style="margin-top: 100px;" id="info">
    <div class="first">
        <p><strong>Тип и име на имота:</strong> {{saleData.type}}</p>
        <p><strong>Местоположение:</strong> {{saleData.location}}</p>
    </div>

    <div class="second">
        <p><strong>Адрес:</strong> {{saleData.address}}</p>
        <p><strong>Квадтратура:</strong> {{saleData.squareMeters}}</p>

    </div>

    <div class="thirth">
        <p><strong>Брой етажи:</strong> {{saleData.floors}}</p>
        <p><strong>Брой стаи:</strong> {{saleData.rooms}}</p>
    </div>

    <div class="four">
        <p><strong>Цена:</strong> {{saleData.price}}</p>
        <p><strong>Цена за оглед: </strong>{{saleData.priceForHour}}</p>
    </div>

    <section id="cartAdding">
        <form action="/addToCart" method="POST">
            <input type="hidden" value="{{saleData.type}}" name="type">
            <input type="hidden" value="{{saleData.location}}" name="location">
            <input type="hidden" value="{{saleData.address}}" name="address">
            <input type="hidden" value="{{saleData.floors}}" name="floors">
            <input type="hidden" value="{{saleData.rooms}}" name="rooms">
            <input type="hidden" value="{{saleData.squareMeters}}" name="squareMeters">
            <input type="hidden" value="{{saleData.price}}" name="price">
            <input type="hidden" value="{{saleData.priceForHour}}" name="priceForHour">
            <input type="hidden" value="{{saleData.img1}}" name="img1">
            <input type="hidden" value="{{saleData.img2}}" name="img2">
            <input type="hidden" value="{{saleData.img3}}" name="img3">
            <input type="hidden" value="{{saleData.img4}}" name="img4">
            <input type="hidden" value="{{saleData.img5}}" name="img5">
            <input type="hidden" value="{{saleData.img6}}" name="img6">


            {{#if user}}
            <div class="five">
                <button type="submit" class="btn btn-primary" style="background-color: #000; border-color: beige">Добави
                    в
                    количката</button>

            </div>
            {{/if}}
        </form>
    </section>

