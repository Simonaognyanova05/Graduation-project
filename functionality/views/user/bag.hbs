<section class="container" style="margin-top: 150px;" id="popular">
    <div class="d-flex">
        <h2>Количка</h2>
    </div>

    {{#if totalPrice}}
    <div class="card mb-3" style="max-width: 540px;" id="totalprice">
        <h3 id="end-order">Продължи</h3>
        <hr>

        <p><strong>Обща цена:</strong> {{totalPrice}} лв.</p>

        <a href="/reserve" class="btn btn-primary" style="background-color: #000; border-color: beige">Завърши
            поръчката</a>
    </div>
    {{else}}
    {{/if}}
    {{#each cartData}}

    <div class="card mb-3" style="max-width: 540px; margin-top: 20px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{this.img1}}" class="img-fluid rounded-start" alt="Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.type}}</h5>
                    <p class="card-text">Цена за оглед: {{this.priceForHour}} лв.</p>
                    <a href="/removeFromCart/{{this._id}}" class="btn btn-primary"
                        style="background-color: #FC5C5C; border-color: beige">Премахни</a>


                </div>
            </div>
        </div>
    </div>
    {{else}}
    <p>Количката е празна</p>
    {{/each}}

</section>