<section class="container" style="margin-top: 150px;" id="popular">
    <form action="/user/filterRent" method="POST" id="login">
        <div class="mb-3">
            <p><strong>Изберете желан тип имот</strong></p>
            <input type="radio" id="type" value="Апартамент" name="type">
            <label for="type">Апартамент</label>

            <input type="radio" id="type" value="Къща" name="type">
            <label for="type">Къща</label>

            <input type="radio" id="type" value="Гараж" name="type">
            <label for="type">Гараж</label>

            <input type="radio" id="type" value="Офис" name="type">
            <label for="type">Офис</label>

            <input type="radio" id="type" value="Друго" name="type">
            <label for="type">Друго</label>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label"><strong>Местоположение</strong></label>
            <input type="text" class="form-control" id="location" placeholder="Въведете местоположение на имота"
                name="location">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary"
                style="background-color: #000; border-color: beige">Филтрирай</button>
        </div>
    </form>

</section>

<section class="container" style="margin-top: 10px;" id="popular">

    <p class="pt-5">Актуално</p>
    <div class="d-flex">
        <h2>Наеми</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-2">
        {{#each rents}}
        <div class="col">
            <div class="card border-0 rounded-0">
                <img src="{{this.img1}}" alt="image1" class="card-img-top rounded-0" style="height: 300px;">
                <div class="card-body">
                    <p class="card-text text-muted">Име на имот: {{this.type}}</p>

                    <div class="d-flex justify-content-center mt-3">
                        <p class="mx-4 text-muted card-text"><i class="fa-solid fa-money-bill"></i>гр./с. {{this.location}}</p>
                    </div>

                    <div class="d-flex my-2">
                        <button class="btn btn-lg text-white bg-dark px-4 rounded-0">Галерия</button>
                        <h5 class="my-auto ms-auto">Цена: {{this.price}}</h5>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <p>Няма създадени имоти</p>
        {{/each}}
    </div>
</section>

