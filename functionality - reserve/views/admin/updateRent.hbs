<section id="loginForm" style="margin-top: 150px;">
    <div class="contact mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <h3>Редактиране на имот под наем</h3>

                    <form action="/admin/updateRent/{{rentId}}" method="POST" id="register">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="type" class="form-label">Тип имот</label>
                                <input type="text" class="form-control" id="type"
                                    placeholder="Апартамент, къща, гараж и т.н." name="type">
                            </div>
                            <div class="col-md-6">
                                <label for="location" class="form-label">Местоположение</label>
                                <input type="text" class="form-control" id="location" placeholder="Варна"
                                    name="location">
                            </div>
                            <div class="col-md-6">
                                <label for="address" class="form-label">Адрес</label>
                                <input type="text" class="form-control" id="address" placeholder="ул. 'Вихрен' 3"
                                    name="address">
                            </div>
                            <div class="col-md-6">
                                <label for="floors" class="form-label">Брой етажи</label>
                                <input type="number" class="form-control" id="floors" placeholder="1, 2, 3..."
                                    name="floors">
                            </div>
                            <div class="col-md-6">
                                <label for="rooms" class="form-label">Брой стаи</label>
                                <input type="number" class="form-control" id="rooms" placeholder="1, 2, 3..."
                                    name="rooms">
                            </div>
                            <div class="col-md-6">
                                <label for="squareMeters" class="form-label">Кв. м.</label>
                                <input type="number" class="form-control" id="squareMeters" placeholder="150"
                                    name="squareMeters">
                            </div>
                            <div class="col-md-6">
                                <label for="price" class="form-label">Цена</label>
                                <input type="number" class="form-control" id="price" placeholder="120000" name="price">
                            </div>
                            <div class="col-md-6">
                                <label for="priceForHour" class="form-label">Цена за оглед</label>
                                <input type="number" class="form-control" id="priceForHour" placeholder="40"
                                    name="priceForHour">
                            </div>
                            <div class="col-md-6">
                                <label for="img1" class="form-label">Снимка 1</label>
                                <input type="text" class="form-control" id="img1" placeholder="URL" name="img1">
                            </div>
                            <div class="col-md-6">
                                <label for="img2" class="form-label">Снимка 2</label>
                                <input type="text" class="form-control" id="img2" placeholder="URL" name="img2">
                            </div>
                            <div class="col-md-6">
                                <label for="img3" class="form-label">Снимка 3</label>
                                <input type="text" class="form-control" id="img3" placeholder="URL" name="img3">
                            </div>
                            <div class="col-md-6">
                                <label for="img4" class="form-label">Снимка 4</label>
                                <input type="text" class="form-control" id="img4" placeholder="URL" name="img4">
                            </div>
                            <div class="col-md-6">
                                <label for="img5" class="form-label">Снимка 5</label>
                                <input type="text" class="form-control" id="img5" placeholder="URL" name="img5">
                            </div>
                            <div class="col-md-6">
                                <label for="img6" class="form-label">Снимка 6</label>
                                <input type="text" class="form-control" id="img6" placeholder="URL" name="img6">
                            </div>

                            <div class="mt-3 mb-5">
                                <button class="btn text-white bg-dark px-3 btn-lg rounded-0">Редактиране</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>