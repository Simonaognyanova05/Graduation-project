

<section class="container" style="margin-top: 100px;" id="popular">
    <p class="pt-5">Актуално</p>
    <div class="d-flex">
        <h2>Продажби</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-2">
            {{#each sales}}

        <div class="col">
            <div class="card border-0 rounded-0">
                <img src="{{this.img1}}" alt="image1" class="card-img-top rounded-0">
                <div class="card-body">
                    <h5 class="card-title">{{this.type}}</h5>


                    <p class="card-text text-muted">гр./с. {{this.location}}</p>

                    <div class="d-flex justify-content-center mt-3">
                        <p class="mx-4 text-muted card-text"><i class="fa-solid fa-money-bill"></i> Цена за оглед: {{this.priceForHour}}</p>
                    </div>

                    <div class="d-flex my-2">
                         <a href="/sales/gallery/{{this._id}}"
                            class="btn btn-lg text-white bg-dark px-4 rounded-0">Галерия</a>
                        <h5 class="my-auto ms-auto"> {{this.price}} лв.</h5>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="alert alert-light" role="alert">
            Няма създадени имоти от този тип
        </div>
        {{/each}}
    </div>
</section>

